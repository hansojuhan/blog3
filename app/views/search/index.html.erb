<div>
  <% if @posts.count == 0 %>
    <h1 class="font-bold text-4xl">Sorry, nothing found :(</h1>
  <% else %>
    <h1 class="font-bold text-4xl">Search results:</h1>

    <table>
      <thead>
        <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th><%= sort_link(@query, :user, "User") %></th>
      </thead>
      <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post %></td>
              <td><%= post.user.email %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  <% end %>
</div>