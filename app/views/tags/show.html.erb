<div class="w-full">

  <h1 class="text-4xl mb-8">Posts with the tag <span class="italic hover:bg-indigo-200 transition ease-in-out duration-200"><%= @tag.name %></span></h1>

  <% @tag.posts.each do |post| %>
  <div class="flex flex-col gap-4 mb-16">
    <%# Render big title, first part of the text and created date %>
    <%= link_to post.title, post_path(post), class:"text-4xl text-left font-medium uppercase hover:underline hover:cursor-pointer"%>
    <div class="line-clamp-4"><%= post.body %></div>
    <div class="">
      <p class="uppercase text-gray-600 text-sm">Posted by <%= post.user.email %> on <%= post.created_at.strftime("%B %e, %Y").upcase %></p>
    </div>
  </div>
<% end %>

</div>